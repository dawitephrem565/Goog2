<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.filenber.goog.PostIdea">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginEnd="0dp"
android:id="@+id/post_image"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:backgroundTint="@color/colorPrimary"
        android:id="@+id/imagechoice"
       android:src="@drawable/ic_camera_enhance_black_24dp"

        android:layout_marginEnd="30dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="52dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/postmsg"
        android:layout_marginBottom="8dp"
android:layout_marginLeft="10dp"
        android:hint="Share what you like"
        android:padding="10dp"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
android:id="@+id/send"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_send_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
